/* pages/alldata/alldata.wxss */
.inputs {
    display: flex;
    align-items: center;
    /* background-color: #66C7FF; */
}
.sort-box{
    width: 100%;
    box-sizing: border-box;
    padding: 20rpx 20rpx;
    display: flex;
    align-items: center;
    flex-direction: row;

}
.sort-box .sort-item{
    background-color: rgb(243, 243, 243);
    padding: 5rpx 20rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    margin-right: 20rpx;
    border-radius: 20rpx;
    font-size: 26rpx;
}
.bluesort{
  border: 1px solid #3E92EA;
  color: #3E92EA;
  background-color: #fff!important;
}
.sort-box .sort-item image{
    width: 25rpx;
    height: 25rpx;
}

.dropbox{
  width: 100%;
  box-sizing: border-box;
}
.dropbox .tagname{
  font-size: 32rpx;
  padding: 0 10rpx;
}
.dropbox .taglist{
  width: 100%;
  padding: 30rpx 30rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  align-items: center;
  justify-content: flex-start;
}
.dropbox .taglist view{
  flex-wrap: nowrap;
  /* flex: 1; */
  font-size: 28rpx;
  padding: 10rpx 30rpx;
  background-color: rgb(242, 242, 242);
  border-radius: 10rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
}
.tagblue{
  background-color: #3E92EA!important;
  color: white;
}
.tagbtn{
  padding: 5px 16px;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 10px;
}
.tagbtn view{
  width: 48%;
  /* background-color: #3E92EA!important; */
  color: #3E92EA;
  padding: 20rpx 0;
  text-align: center;
  border: 1px solid #3E92EA;
}
.tagbtn .bl{
  background-color: #3E92EA;
  color: #ffffff!important;
}
