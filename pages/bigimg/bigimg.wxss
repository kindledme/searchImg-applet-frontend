/* pages/bigimg/bigimg.wxss */
page{
    width: 100%;
    height: 100%;
}
.container{
    background-color: #333333!important;
    width: 100%;
    height: 100%;
}
.num{
    width: 100%;
    box-sizing: border-box;
    padding: 10% 0 6%;
    text-align: center;
    color: #ffffff;
}

.info{
    width: 100%;
    box-sizing: border-box;
    padding: 30rpx 20rpx;
}
.info-tit{
    font-size: 26rpx;
    margin-top: 10rpx;
    color: #ffffff;
    margin-bottom: 10rpx;
}
.info-cont{
    width: 100%;
    box-sizing: border-box;
}
.info-cont .item{
    width: 100%;
    box-sizing: border-box;
    display: flex;
    flex-direction: row;
    align-items: center;
}
.info-cont .item .at{
    padding: 5rpx 0;
    font-size: 24rpx;
    width: 16%;
    color: #ffffff;
}
.info-cont .item .bt{
    font-size: 24rpx;
    width: 70%;
    color: #ffffff;
}
.down{
    width: 100%;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    position: fixed;
    bottom: 3%;
    color: #ffffff;
    font-size: 22rpx;
}
.down image{
    width: 60rpx;
    height: 60rpx;
}